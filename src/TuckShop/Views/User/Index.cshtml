</div>

    <script type="text/javascript">
        $(document).ready(function () {
            var drinksList = [];
            var foodList = [];
            var sweetsList = [];
            $.post('@(Url.Action("AllProducts","User"))', "", function (data, status) {
                drinksList = data.drinks;
                foodList = data.food;
                sweetsList = data.sweets;
            });
            state = {
                Drinks: false,
                Food: false,
                Sweets: false
            };
            $(document).on('click', '#DrinksBox', function () {
                OrderModule.showDrinks(state,drinksList);
               
            });
            $(document).on('click', '#FoodBox', function () {
                OrderModule.showFood(state, foodList);
            });
            $(document).on('click', '#SweetsBox', function () {
                OrderModule.showSweets(state, sweetsList);
            });
            $(document).on('click', '.selectItem', function () {
                let id = $(this).data("id");
                let value = $(this).data("val");
                let price = $(this).data("price");
                OrderModule.createOrder(value, id, price);
            });
            if (OrderModule.order[0]== null) {


            }
        });
    </script>

